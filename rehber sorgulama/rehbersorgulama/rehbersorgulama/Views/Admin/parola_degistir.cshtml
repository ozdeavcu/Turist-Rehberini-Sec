@model rehbersorgulama.Models.tbl_kullanici
@{
    ViewBag.Title = "parola_degistir";
    Layout = "~/Views/Shared/admin_layout.cshtml";
}


<div class="col-xxl-8">

    <div class="card">
        <div class="card-body pt-3">
            <!-- Bordered Tabs -->
            <ul class="nav nav-tabs nav-tabs-bordered">
                <li class="nav-item">
                    <button class="nav-link" data-bs-toggle="tab" data-bs-target="#profile-change-password"> Kullanıcı Adı Şifre Değiştir</button>
                    </li>
            </ul>
          <div class="tab-pane fade pt-3" id="profile-change-password">

    <form action="~/Admin/parola_degistir" method="post" role="form">
        @Html.HiddenFor(p=>p.rehber_id)
        <div class="row mb-3">
            <label for="newPassword" class="col-md-4 col-lg-3 col-form-label">Kullanıcı Adı</label>
            <div class="col-md-8 col-lg-9">
                <input name="kullaniciad" type="text" class="form-control" maxlength="10" value="@Model.kullaniciad">
            </div>
        </div>
        <div class="row mb-3">
            <label for="newPassword" class="col-md-4 col-lg-3 col-form-label">Yeni Şifre</label>
            <div class="col-md-8 col-lg-9">
                <input name="sifre" type="password" class="form-control" maxlength="10" value="@Model.sifre">
            </div>
        </div>
        <div class="row mb-3">
            <label for="renewPassword" class="col-md-4 col-lg-3 col-form-label">Yeni Şifre Tekrar</label>
            <div class="col-md-8 col-lg-9">
                <input name="sifretekrar" type="password" class="form-control" maxlength="10" >
            </div>
        </div>

        <div class="text-center">
            <button type="submit" class="btn btn-primary">Şifre Değiştir</button>
        </div>
    </form>
</div>

        </div>
    </div>

</div>

