@using rehbersorgulama.MVVM
@model AnasayfaModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/default_layout.cshtml";
}
<style>

    #home_one_banner {
        background-image: url('/Content/img/banner1.png');
        padding: 370px 0 280px 0;
        position: relative;
        background-position: center;
        background-repeat: no-repeat;
        background-size: cover;
        z-index: -1;
    }

    img_animation {
        overflow: hidden;
    }

    .img_animation img {
        transition: var(--transition);
        position: relative;
    }

    .img_animation::after {
        content: "";
        position: absolute;
        width: 100%;
        height: 100%;
        background: #733E12;
        left: 0;
        top: 0;
        opacity: 0;
        visibility: hidden;
        transition: var(--transition);
    }

    .img_animation:hover::after {
        opacity: 0.4;
        visibility: visible;
    }

    .img_animation:hover img {
        transform: scale(1.2);
    }
</style>
<!-- Banner Area -->

<section id="home_one_banner">

    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-12">
                <div class="banner_one_text">
                    <h1>Turist Rehberini Seç</h1>
                    <h3>Profesyonel Rehberlerimizle Keşfetmek Artık Çok Kolay </h3>
                </div>
            </div>
        </div>
    </div>

</section>


<!-- Popular Tours Area -->
<section id="popular_tours_four" class="section_padding_top">
    <div class="container">
        <!-- Section Heading -->
        <div class="row">
            <div class="col-lg-6 col-md-6 col-sm-12 col-12">
                <div class="section_heading_left">
                    <h2>Öne Çıkan Şehirler</h2>

                </div>
            </div>
        </div>
        <!-- inner content -->
        <div class="row">
            <div class="col-lg-12">
                <div class="popular_tours_four_slider button_style_top_left owl-theme owl-carousel">
                    @foreach (var item in Model.onecikan_ilce)
                    {
                        <div class="common_card_four">
                            <div class="common_card_four_img">
                                <a href="~/Home/sehiricerik_detay/@item.ilce_id">
                                    <img src="@item.fotograf" alt="img" style="width:400px; height:300px;">
                                </a>
                            </div>
                            <div class="common_card_four_text">

                                <h3><a href="~/Home/sehiricerik_detay/@item.ilce_id">@item.ilce_ad</a></h3>
                                <p><i class="fas fa-map-marker-alt"></i>@item.ilce_ad</p>

                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>

